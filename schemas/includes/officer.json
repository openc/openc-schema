{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "An officer (director, senior executive) of a company",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "not": {
        "pattern": "^[\\.\\,\\*\\\\\\-\\s\\{\\}\\(\\)]+$"
      }
    },
    "start_date": {
      "anyOf": [
        {
          "type": "string",
          "format": "date"
        },
        {
          "type": "null"
        }
      ]
    },
    "end_date": {
      "anyOf": [
        {
          "type": "string",
          "format": "date"
        },
        {
          "type": "null"
        }
      ]
    },
    "position": {
      "type": "string"
    },
    "uid": {
      "type": "string",
      "description": "a unique identifier given to the officership"
    },
    "other_attributes": {
      "type": "object",
      "properties": {
        "date_of_birth": {
          "type": "string",
          "format": "date"
        },
        "nationality": {
          "type": "string"
        },
        "person_uid": {
          "type": "string",
          "description": "a unique identifier given to the individual (as opposed to the officership)"
        },
        "address": {
          "$ref": "address.json"
        },
        "type": {
          "type": "string",
          "enum": [
            "Person",
            "Company"
          ],
          "description": "The type of entity that is the officer (either 'Person' or 'Company')"
        }
      }
    }
  },
  "required": [
    "name"
  ]
}
